<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

	<t t-extend="mail.ChatThread.Message" t-name="mail.ChatThread.Message">
		<t t-jquery=".o_mail_timestamp" t-operation="replace">
			<small class="o_mail_timestamp" t-att-title="message.date">
				<t t-field="message.date"/>
            </small>
		</t>

		<t t-jquery=".o_thread_message_content" t-operation="after">
			<t t-if="message.read_by">
				<div>
					<span class="fa fa-check"/> <t t-esc="message.read_by"/>
				</div>
			</t>
		</t>
	</t>

</templates>
