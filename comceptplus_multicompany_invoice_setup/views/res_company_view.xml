<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_company_form" model="ir.ui.view">
            <field name="name">comceptPLUS: add default invoice template</field>
            <field name="model">res.company</field>
            <field name="inherit_id"
                    ref="comceptplus_multicompany_reports.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='comceptplus_reports']/group/group/field[last()]" position="after">
                    <field name="default_invoice_template_with_payments"/>
                    <field name="default_invoice_template_without_payments"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
